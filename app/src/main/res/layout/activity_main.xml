<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
    
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/activity_main_searchbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="5dp">

        <EditText
            android:id="@+id/activity_main_searchinput"
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="textNoSuggestions"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"/>

    </RelativeLayout>
    

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1.0">

		<ListView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/list_all"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:fastScrollEnabled="true"
            android:fadeScrollbars="false"
            android:fastScrollAlwaysVisible="true"
            android:fastScrollTextColor="#345345"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarTrackVertical="@drawable/track_vert"
            android:scrollbarThumbVertical="@drawable/ic_launcher"
            android:fastScrollThumbDrawable="@drawable/ic_launcher"
            android:fastScrollTrackDrawable="@drawable/track_vert"/>
		
		<ListView
			android:background="#fefefe"
			android:visibility="gone"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/list_search_result"/>

	</RelativeLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text=""
			android:ellipsize="end"
			android:textColor="#a46a86"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/tvlog"/>

	</LinearLayout>

</LinearLayout>


